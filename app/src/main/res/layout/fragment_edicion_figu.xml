<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edicion_figurita.EdicionFiguritaFragment">

    <TextView
        android:id="@+id/figurita_nombre"
        android:layout_width="300dp"
        android:layout_height="464dp"
        android:layout_weight="1"
        android:background="@color/verde_figurita"
        android:gravity="center"
        android:text="Fede"
        android:textAlignment="center"
        android:textFontWeight="900"
        android:textSize="50px"
        app:layout_constraintBottom_toTopOf="@+id/NuevaCantidadText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CantidadTextView"
        android:layout_width="71dp"
        android:layout_height="86dp"
        android:layout_weight="1"
        android:background="#fff"
        android:gravity="center"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:text="0"
        android:textAlignment="center"
        android:textSize="50px"
        app:layout_constraintStart_toStartOf="@+id/figurita_nombre"
        app:layout_constraintTop_toTopOf="@+id/figurita_nombre" />

    <EditText
        android:id="@+id/NuevaCantidadText"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="40dp"
        android:ems="10"
        android:inputType="number"
        android:text="Ingrese nueva cantidad"
        app:layout_constraintBottom_toTopOf="@+id/GuardarCantidadButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/GuardarCantidadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>